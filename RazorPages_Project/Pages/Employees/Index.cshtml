@page
@model RazorPages_Project.Pages.Employees.IndexModel
@{
}

<style>
    .btn {
        width: 75px;
    }
</style>

<h2>Employee</h2>

<div class="card-deck">
    @foreach (var employee in Model.Employees)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "P4.jpg");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>

            <img class="card-img-top imageThumbnail" src="@photoPath"
                 asp-append-version="true" />

            <div class="card-footer text-center">
                <a asp-page="/Employees/Details" asp-route-Id="@employee.Id"
                   class="btn btn-primary m-1">View</a>
                <a asp-page="/Employees/Edit" asp-route-Id="@employee.Id"
                   class="btn btn-primary m-1">Edit</a>
               
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>